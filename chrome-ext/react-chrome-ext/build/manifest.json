{
  "manifest_version": 3,
  "name": "Voice Input Extension",
  "version": "1.0",
  "description": "A Chrome extension that takes voice input using the Web Speech API.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}